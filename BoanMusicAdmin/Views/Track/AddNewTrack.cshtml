@model BoanMusicApp.BO.ArtistDTO

@{
    ViewData["Title"] = "Add New Track";
}

<h2>Add New Track</h2>

<form asp-action="AddNewTrack" method="post">
    <div class="form-group">
        <label asp-for="SelectedArtistId" class="control-label">Artist ID</label>
        <select id="artistId" asp-for="SelectedArtistId" class="form-control">
            <option value="">-- Select Artist ID --</option>
            @foreach (var artist in Model.Artists)
            {
                <option value="@artist.Artist_ID">@artist.Artist_ID</option>
            }
        </select>
        <span asp-validation-for="SelectedArtistId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Artist Name</label>
        <input type="text" id="artistName" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Track Name</label>
        <input type="text" asp-for="Name" class="form-control" required>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Duration" class="control-label">Duration</label>
        <input type="text" asp-for="Duration" class="form-control" required>
        <span asp-validation-for="Duration" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Genre" class="control-label">Genre</label>
        <input type="text" asp-for="Genre" class="form-control" required>
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<script>
    $('#artistId').change(function () {
        var artistId = $(this).val();
        $('#artistName').val(artistId ? Model.Artists.find(a => a.Artist_ID === parseInt(artistId)).Name : '');
    });
</script>
